<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12pt"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hallo Saya Tia Atikah"
        android:textSize="14pt" />

    <Button
        android:id="@+id/btnpgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:onClick="panggil"
        android:text="Telepon"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/btnbuka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnpgl"
        android:layout_centerHorizontal="true"
        android:onClick="buka"
        android:text="web"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/btnmaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnbuka"
        android:layout_centerHorizontal="true"
        android:onClick="Gaskeeun"
        android:text="maps"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:id="@+id/sendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmaps"
        android:layout_centerHorizontal="true"
        android:text="email"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="496dp" />

</RelativeLayout>